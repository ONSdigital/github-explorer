<nav>
  <ul>
<% if request.path_info.end_with?('inactive') %><li id="active-filter">6 Months</li><% else %><li><a href="/inactive">6 Months</a></li><% end %>
<% if request.path_info.end_with?('one-year') %><li id="active-filter">1 Year</li><% else %><li><a href="/inactive/one-year">1 Year</a></li><% end %>
